# Example env variables for local development
# Option A: point to a local service account JSON (do NOT commit this file)
# export GOOGLE_APPLICATION_CREDENTIALS="./sochai-2025-firebase-adminsdk-fbsvc-31f0840034.json"

# Option B: provide the service account JSON base64-encoded (safer for CI/platforms)
# export FIREBASE_SERVICE_ACCOUNT_BASE64="$(cat ./sochai-2025-firebase-adminsdk-fbsvc-31f0840034.json | base64)"

# Other environment variables
PORT=1000
MONGODB_URI=mongodb://localhost:27017/soch
# Backend example env for Firebase Admin
# Option A: Provide the service account JSON contents base64-encoded (recommended for CI/hosted envs)
# To create base64: cat serviceAccount.json | base64
FIREBASE_SERVICE_ACCOUNT_BASE64=
# Or Option B: specify a JSON file path (useful for local dev only, not for cloud). Example:
# GOOGLE_APPLICATION_CREDENTIALS=./service-account.json
# Or Option C: For development without full credentials, just provide the project ID
FIREBASE_PROJECT_ID=your-firebase-project-id

# Other envs (already used in project)
MONGODB_URI=mongodb://localhost:27017/sochai-backend
PORT=5000
JWT_SECRET=some-secret
